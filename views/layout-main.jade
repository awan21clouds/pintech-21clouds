  body.skin-blue.layout-top-nav
    .wrapper
      header.main-header
        nav.navbar.navbar-static-top
          .container
            .navbar-header
              a.navbar-brand(href='/')
                b Pin
                | Tech
              button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-collapse')
                i.fa.fa-bars
            // Collect the nav links, forms, and other content for toggling
            #navbar-collapse.collapse.navbar-collapse.pull-left
              ul.nav.navbar-nav
                li
                  a(href='/')
                    | Recent Pins
                    span.sr-only (current)
                li
                  a(href='/pin') My Pins
            .navbar-custom-menu
              ul.nav.navbar-nav
                li
                  a(href='../setting')
                    span.hidden-xs Setting
                li
                  a(href='../user/logout')
                    span.hidden-xs Logout

      block content
