extends layout-main

block content

      // ===============================================
      // Content Wrapper. Contains page content
      .content-wrapper(ng-controller="settingController")
        // Main content
        section.content
          .box
            .box-header.with-border
              h3.box-title Setting
            .box-body
              .form-group
                label Nickname
                input.form-control(type='text', placeholder='Enter username', ng-model="user.nickname")
              .form-group
                label Password
                input.form-control(type='password', placeholder='Enter password', ng-model="user.password")
              .form-group
                label Email address
                input.form-control(type='email', placeholder='Enter email', ng-model="user.email")
              .form-group
                label City
                input.form-control(type='text', placeholder='Enter city', ng-model="user.city")
              .form-group
                label State
                input.form-control(type='text', placeholder='Enter state', ng-model="user.state")
            .box-footer
              .input-group
                button.btn.btn-primary(type="button", ng-click="update()") Save
